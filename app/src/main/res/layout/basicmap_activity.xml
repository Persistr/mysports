<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp" 
        android:background="@drawable/title_background"
        android:onClick="onBackClick">

        <ImageView
            android:id="@+id/left_of_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:scaleType="center"
            android:src="@drawable/back_btn_image"
            />

        <ToggleButton
            android:id="@+id/locationbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingStart="5dp" 
            android:textOn="结束运动"
            android:textOff="开始运动"
            android:layout_toRightOf="@+id/left_of_back"
            >
        </ToggleButton>

        <CheckBox
            android:id="@+id/trace_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="骑行优化"
            android:layout_toRightOf="@+id/locationbtn"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_lly_right"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingRight="5dp" 
            android:onClick="record">

            <TextView
                android:id="@+id/title_tv_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:enabled="true"
                android:textSize="18dp"
                android:text="运动记录" />
        </LinearLayout>
    </RelativeLayout>

    <com.amap.api.maps.MapView 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title" >
    </com.amap.api.maps.MapView>
    <TextView
        android:id="@+id/show_all_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动里程："
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/title"/>

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="速度："
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/show_all_dis"/>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间："
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/speed"/>
    <TextView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卡路里消耗："
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/hour"/>
    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海拔高度："
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/cal"/>

    <TextView
        android:id="@+id/speed_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每公里时速："
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/altitude"/>
</RelativeLayout>




 